# Valeda Form Environment Variables Template
# Copy this file to .env in production and fill in the actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/valeda-treatments-prod
# For MongoDB Atlas or remote MongoDB:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/valeda-treatments-prod

# Domain Configuration
DOMAIN=oftalmonet.mx
BASE_PATH=/valeda

# Security (generate random values for production)
JWT_SECRET=your-jwt-secret-here-generate-random
SESSION_SECRET=your-session-secret-here-generate-random

# CORS Configuration
ALLOWED_ORIGINS=https://oftalmonet.mx,http://oftalmonet.mx

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

# Feature Flags
ENABLE_AUTO_SAVE=true
AUTO_SAVE_INTERVAL=2000

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30