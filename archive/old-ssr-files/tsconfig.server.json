{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "src/app/**/*",
    "src/main.ts",
    "src/main.server.ts"
  ]
}